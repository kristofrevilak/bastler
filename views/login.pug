extends layout

block content

  form(method='POST' action='/login')
    .form-group
      label(for='username') Username
      input(type='text', name='username', required)
      label(for='password') Password
      input(type='password', name='password', required)
    button(type='submit') Submit

  if errors 
    ul
      for error in errors
        li!= error.msg